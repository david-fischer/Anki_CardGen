#: import colors  kivymd.color_definitions.colors
#: import get_color_from_hex kivy.utils.get_color_from_hex


<MDTextField>:
#    mode: "rectangle"
    size: 200, 100

<WordProperties>:
    orientation: "vertical"
    padding: 50,50
    spacing: 10


    MDTextField:
        id: search_field
        hint_text: "Search Term"
        text: root.search_term
        on_text: root.search_term = self.text

    MyChooseChip:
        id: gender_chips
        choose_one: True

        MyChip:
            unselected_chip_color: get_color_from_hex(colors["Blue"]["200"])
            selected_chip_color: get_color_from_hex(colors["Blue"]["800"])
            label: 'm'
            icon: 'gender-male'

        MyChip:
            unselected_chip_color: get_color_from_hex(colors["Pink"]["200"])
            selected_chip_color: get_color_from_hex(colors["Pink"]["800"])
            label: 'f'
            icon: 'gender-female'

        MyChip:
            label: ''
            unselected_chip_color: get_color_from_hex(colors["Gray"]["400"])
            selected_chip_color: get_color_from_hex(colors["Gray"]["800"])
            icon: "minus"


    MDTextField:
        id: translation_field
        hint_text: "translation Term"
        text: root.translation
        on_text: root.translation = self.text

    MDTextField:
        id: search_field
        hint_text: "Search Term"
        text: root.search_term
        on_text: root.search_term = self.text

    MyChooseChip:
        id: synonym_chips
        choose_one: False

    MDFloatingActionButton:
        icon: "printer"
        on_release: root.post_init();print(root.print_all())