#: import colors  kivymd.color_definitions.colors
#: import get_color_from_hex kivy.utils.get_color_from_hex


<MDTextField>:
#    mode: "rectangle"
    size: 200, 100

<WordProperties>:
    orientation: "vertical"
    padding: 50,50
    spacing: 10


    MDTextField:
        id: search_field
        hint_text: "Search Term"
        text: root.search_term
        on_text: root.search_term = self.text

    MyChooseChip:
        id: gender_chips

        MyChip:
            label: 'm'
            icon: 'gender-male'
#            color: get_color_from_hex(colors["Pink"]["200"])
            selected_chip_color: app.theme_cls.primary_dark

        MyChip:
            label: 'f'
            icon: 'gender-female'
#            color: get_color_from_hex(colors["Blue"]["200"])
            selected_chip_color: app.theme_cls.primary_dark

        MyChip:
            label: ''
            icon: "minus"
#            color: get_color_from_hex(colors["Gray"]["400"])
            selected_chip_color: app.theme_cls.primary_dark


    MDTextField:
        id: translation_field
        hint_text: "translation Term"
        text: root.translation
        on_text: root.translation = self.text

    MDTextField:
        id: search_field
        hint_text: "Search Term"
        text: root.search_term
        on_text: root.search_term = self.text


    MDFloatingActionButton:
        icon: "printer"
        on_release: print(root.print_all())



