#:import WordProperties screens.single_word.WordProperties
WordProperties:
    id: word_prop
    ScrollView:
        id: word_scroll
        do_scroll_x: False
        do_scroll_y: True
        size_hint: 1,1
        BoxLayout:
            id: word_box
            size_hint:1,None
            height: self.minimum_height
            orientation: "vertical"
            padding: dp(20),dp(20)
            spacing: 20

            MDTextField:
                id: search_field
                size: 200,50
                hint_text: "Search Term"
                text: ""
                on_text_validate: word_prop.load_or_search(self.text)
                size_hint: 0.,None
                on_parent: self.focus = True
                pos_hint: {"center_x":0.5,"center_y":0}

            MDLabel:
                text: "Images"
                color: self.theme_cls.disabled_hint_text_color
                pos_hint: {"x":0,"y":0}

            RecycleImageCarousel:
                id: image
                height: 200


            MDLabel:
                text: "Translations"
                color: self.theme_cls.disabled_hint_text_color
                pos_hint: {"x":0,"y":0}

            MyCheckChipContainer:
                id: translation
                check_one: False

            MDLabel:
                text: "Synonyms"
                color: self.theme_cls.disabled_hint_text_color
                pos_hint: {"x":0,"y":0}

            MyCheckChipContainer:
                id: synonym
                check_one: True
                child_class_name: "MyTransChip"

            MDLabel:
                text: "Antonyms"
                color: self.theme_cls.disabled_hint_text_color
                pos_hint: {"x":0,"y":0}

            MyCheckChipContainer:
                id: antonym
                child_class_name: "MyTransChip"
                check_one: True

            MDLabel:
                text: "Explanations"
                color: self.theme_cls.disabled_hint_text_color
                pos_hint: {"x":0,"y":0}

            RecycleCardCarousel:
                id: explanation
                size_hint_x: None
                width: root.width


            MDLabel:
                text: "Examples"
                color: self.theme_cls.disabled_hint_text_color
                pos_hint: {"x":0,"y":0}

            RecycleCardCarousel:
                id: example
                size_hint_x: None
                width: root.width

            Widget:
                size_hint: None,None
                height: dp(30)

    MDFloatingActionButton:
        icon: "check-bold"
        pos: (root.width-dp(16)-self.width,dp(10))
        on_press: word_prop.complete_generation()

