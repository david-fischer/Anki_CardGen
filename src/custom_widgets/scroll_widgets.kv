<LeftStatusIndicator>:
    spinner_active: False
    icon: ""
    icon_color: app.theme_cls.text_color
    state_dicts:
        {\
        "waiting": {"icon":"download", "icon_color":app.theme_cls.text_color, "spinner_active": False},\
        "queued": {"icon":"close", "icon_color":app.theme_cls.text_color, "spinner_active": False},\
        "loading":{"icon":"", "icon_color":[0,0,0,0], "spinner_active": True },\
        "done":{"icon":"check-circle", "icon_color":[0,1,0,1], "spinner_active": False},\
        "ready":{"icon":"open-in-new", "icon_color":app.theme_cls.text_color, "spinner_active": False},\
        "error":{"icon":"close-circle", "icon_color":[1,0,0,1], "spinner_active": False},\
        }


    MDIcon:
        id: _icon
        icon: root.icon
        color: root.icon_color
        size_hint: 1,1
        font_size: 30
        texture_size: self.size

    MDSpinner:
        id: spinner
        active: root.spinner_active
        size_hint: 0.7,0.7
        opacity: float(root.spinner_active)

<LeftStatusIndicatorListItem>:

    LeftStatusIndicator:
        current_state: root.current_state


<ScrollList>:
    list: list
    root_for_children:list
    children_class_name: "LeftStatusIndicatorListItem"

    MDList:
        id: list


<ScrollBox>:
    root_for_children: stack
    do_scroll_x: False
    do_scroll_y: True
    size_hint: 1, 1
    BoxLayout:
        id:stack
        padding: dp(8),dp(8)
        spacing: dp(8)
        orientation: "vertical"
        size_hint:1,None
        height: self.minimum_height

<ScrollGrid>:
    do_scroll_x: False
    do_scroll_y: True
    size_hint: 1,1
    root_for_children: grid
    GridLayout:
        cols: 2
        id: grid
        row_default_height: (self.width - self.cols*self.spacing[0]) / self.cols *3/4
        row_force_default: True
        size_hint_y: None
        height: self.minimum_height
        padding: dp(4), dp(4)
        spacing: dp(4)
        spacing: dp(4)

<RBox@RecycleBoxLayout>:
    size_hint: 1,None
    default_size_hint: 1, None
    default_size: None, None
    height: self.minimum_height
    orientation: 'vertical'
    padding: dp(20),dp(20)
    spacing: dp(20)
#    canvas:
#        Color:
#            rgba: .5,.5,.5,.5
#        Rectangle:
#            pos: self.pos
#            size:self.size

<RecycleViewGrid>:
    size_hint: 1,1
    pos_hint:{"y":"bottom"}
    RecycleGridLayout:
        cols: 2
        row_default_height: (self.width - self.cols*self.spacing[0]) / self.cols /4*3
        row_force_default: True
        size_hint_y: None
        default_size_hint:1,1
        height: self.minimum_height
        padding: dp(4), dp(4)
        spacing: dp(4)

<RecycleViewBox>:
    size_hint: 1,1
    RBox:
        id: box_layout

<RecycleList>:
    size_hint: 1,1
    RBox:
        id: box_layout
        spacing: 0
        padding: 0
