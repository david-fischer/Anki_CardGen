FloatLayout:

    RecycleList:
        id: queue_list
        viewclass: "LeftStatusIndicatorListItem"
        data:
            [\
            {"text": word, "current_state":word_state} for word, word_state in\
            pick_val(["queued","ready","loading"],app.word_state_dict).items()\
            ]


    MyFloatingActionButtonSpeedDial:
        id: speed_dial
        data: options_dict
        callback: choose_file_to_import
