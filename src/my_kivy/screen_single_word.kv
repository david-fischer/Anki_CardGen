#:import WordProperties my_kivy.screen_single_word.WordProperties
<MDTextField>:
    size: 200, 100

<WordProperties>:
    orientation: "vertical"
    padding: dp(20),dp(20)
    spacing: 20

    MDTextField:
        id: search_field
        hint_text: "Search Term"
        text: ""
        on_text_validate: root.load_or_search(self.text)
        size_hint: 0.,None
        on_parent: self.focus = True
        pos_hint: {"center_x":0.5,"center_y":0}

    MDLabel:
        text: "Images"
        color: self.theme_cls.disabled_hint_text_color
        pos_hint: {"x":0,"y":0}

    ImageCarousel:
        id: images
        height: 200


    MDLabel:
        text: "Translations"
        color: self.theme_cls.disabled_hint_text_color
        pos_hint: {"x":0,"y":0}

    MyCheckChipContainer:
        id: translations
        check_one: False

    MDLabel:
        text: "Synonyms"
        color: self.theme_cls.disabled_hint_text_color
        pos_hint: {"x":0,"y":0}

    MyCheckChipContainer:
        id: synonyms
        check_one: True
        child_class_name: "MyTransChip"

    MDLabel:
        text: "Antonyms"
        color: self.theme_cls.disabled_hint_text_color
        pos_hint: {"x":0,"y":0}

    MyCheckChipContainer:
        id: antonyms
        child_class_name: "MyTransChip"
        check_one: True

    MDLabel:
        text: "Explanations"
        color: self.theme_cls.disabled_hint_text_color
        pos_hint: {"x":0,"y":0}

    CardCarousel:
        id: explanations
        size_hint_x: None
        width: root.width


    MDLabel:
        text: "Examples"
        color: self.theme_cls.disabled_hint_text_color
        pos_hint: {"x":0,"y":0}

    CardCarousel:
        id: examples
        size_hint_x: None
        width: root.width

    Widget:
        size_hint: None,None
        height: dp(30)


FloatLayout:
    ScrollView:
        id: word_scroll
        do_scroll_x: False
        do_scroll_y: True
        size_hint: 1,1
        WordProperties:
            id: word_prop
            size_hint:1,None
            height: self.minimum_height

    MDFloatingActionButton:
        icon: "check-bold"
        pos: (root.width-dp(16)-self.width,dp(10))
        on_press: word_prop.complete_generation()

