#:import NoTransition kivy.uix.screenmanager.NoTransition

<DrawerItem>:
    theme_text_color: "Custom"
    text_color: app.theme_cls.text_color
    state_dicts:
        {\
        True: {"text_color":self.theme_cls.primary_color},\
        False: {"text_color":self.theme_cls.text_color} \
        }

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color


<DrawerContent@BoxLayout>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "112dp", "112dp"
            source: "assets/AnkiCardGen.png"

    MDLabel:
        text: "Anki CardGen"
        font_style: "Button"
        theme_text_color: "Primary"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        id: mail
        text: "david.fischer.git@posteo.de"
        font_style: "Caption"
        theme_text_color: "Secondary"
        size_hint_y: None
        height: self.texture_size[1]



<MainMenu>:
    orientation:"tb-lr"
    MDToolbar:
        id: main_toolbar
        title: "Anki CardGen"
        elevation: 10
        icon_color: self.theme_cls.text_color
        left_action_items: [['menu', lambda x: nav_drawer.set_state("toggle")]]
        right_action_items: [['cog-outline', lambda x: drawer_list.click_screen_name("screen_settings")]]


    NavigationLayout:
        size_hint: 1, 1

        ScreenManager:
            id: screen_man
            size_hint: 1,None
            height: root.height - main_toolbar.height
            transition: NoTransition()


        MDNavigationDrawer:
            id: nav_drawer
            screen_manager: screen_man
            close_on_click: True

            DrawerContent:
                id: drawer_content
                canvas.before:
                    Color:
                        rgba: app.theme_cls.primary_color
                    Rectangle:
                        size: self.size[0],self.ids.mail.pos[1]
                        pos: self.pos[0], self.ids.mail.pos[1]- self.ids.mail.height
                DrawerList:
                    id: drawer_list
                    size_hint: 1,1
