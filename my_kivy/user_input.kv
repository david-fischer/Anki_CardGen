<MDTextField>:
#    mode: "rectangle"
    size: 200, 100

<WordProperties>:
    orientation: "vertical"
    padding: 30,40
    spacing: 20

    MDTextField:
        id: search_field
        hint_text: "Search Term"
        text: root.search_term
        on_text: root.search_term = self.text
        on_text_validate: root.load_or_search(); root.refresh_data()
        size_hint: 0.,None
        on_parent: self.focus = True
        pos_hint: {"center_x":0.5,"center_y":0}
#        MDFloatingActionButton:
#            id: search_button
#            icon: "magnify"
#            on_release: root.search(); root.refresh_data()

#        MDFloatingActionButton:
#            id: save_button
#            icon: "content-save"
#            on_release: app.word.search_term = search_field.text; root.pickle()

#        MDFloatingActionButton:
#            id: load_button
#            icon: "folder-open-outline"
#            on_release: app.word.search_term = search_field.text;root.unpickle();root.refresh_data()

    MDLabel:
        text: "Translations"
        color: self.theme_cls.disabled_hint_text_color
        pos_hint: {"x":0,"y":0}

    MyCheckChipContainer:
        id: translation_chips
        check_one: False

    MDLabel:
        text: "Synonyms"
        color: self.theme_cls.disabled_hint_text_color
        pos_hint: {"x":0,"y":0}

    MyTransChipContainer:
        id: synonym_chips
        check_one: True

    MDLabel:
        text: "Antonyms"
        color: self.theme_cls.disabled_hint_text_color
        pos_hint: {"x":0,"y":0}

    MyTransChipContainer:
        id: antonym_chips
        check_one: True

    MDLabel:
        text: "Explanations"
        color: self.theme_cls.disabled_hint_text_color
        pos_hint: {"x":0,"y":0}

    MyCheckCardContainer:
        id: explanation_cards
        check_one: True

    MDLabel:
        text: "Examples"
        color: self.theme_cls.disabled_hint_text_color
        pos_hint: {"x":0,"y":0}

    MyTransCardContainer:
        id: example_cards
        check_one: True
