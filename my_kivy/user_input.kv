#: import colors  kivymd.color_definitions.colors
#: import get_color_from_hex kivy.utils.get_color_from_hex
#: import pickle pickle


<MDTextField>:
#    mode: "rectangle"
    size: 200, 100

<WordProperties>:
    orientation: "vertical"
    padding: 50,50
    spacing: 10
    synonyms: app.word.synonyms
    examples: app.word.examples

    BoxLayout:
        orientation: "horizontal"
        spacing: 10
        MDTextField:
            id: search_field
            hint_text: "Search Term"
            text: root.search_term
            on_text: root.search_term = self.text
            size_hint: 0.,None
        MDFloatingActionButton:
            icon: "magnify"
            on_release: app.search_term = root.search_term;app.word.get_data();root.refresh_data()

        MDFloatingActionButton:
            icon: "content-save"
            on_release: pickle.dump(app.word,open("temp.p","wb")),print(f"pickeled {app.word}.")

        MDFloatingActionButton:
            icon: "folder-open-outline"
            on_release: app.word = pickle.load(open("temp.p","rb")); root.refresh_data()

    MDSeparator:

    MyChooseChip:
        id: gender_chips
        choose_one: True
        opacity:1

        MyChip:
            unselected_chip_color: get_color_from_hex(colors["Blue"]["200"])
            selected_chip_color: get_color_from_hex(colors["Blue"]["800"])
            label: 'm'
            icon: 'gender-male'

        MyChip:
            unselected_chip_color: get_color_from_hex(colors["Pink"]["200"])
            selected_chip_color: get_color_from_hex(colors["Pink"]["800"])
            label: 'f'
            icon: 'gender-female'

        MyChip:
            label: ''
            unselected_chip_color: get_color_from_hex(colors["Gray"]["400"])
            selected_chip_color: get_color_from_hex(colors["Gray"]["800"])
            icon: "minus"
    MDSeparator:

    MDDropDownItem:
        id: explanation_dropdown
        items: ["Explanation"]
        dropdown_width_mult: 100
        pos_hint: {"center_x":0.5,"center_y":0.5}
        #dropdown_bg: [1, 1, 1, 1]

    MDSeparator:

    MyChooseChip:
        id: translation_chips
        choose_one: False

        MyChip:
            label: "Translations"


    MDSeparator:

    MyChooseChip:
        id: synonym_chips
        choose_one: False

        MyChip:
            label: "Synonyms"

    MDSeparator:

    MyChooseChip:
        id: antonym_chips
        choose_one: False

        MyChip:
            label: "Antonyms"

    MDSeparator:


    MyChooseChip:
        id: example_chips
        choose_one: False

        MyChip:
            label: "Examples"



    Widget: