#:import ScrollList my_kivy.scroll_list.ScrollList
#:import LeftStatusIndicatorListItem my_kivy.scroll_list.LeftStatusIndicatorListItem
#:import options_dict my_kivy.screen_queue.options_dict
#:import import_from my_kivy.screen_queue.import_from
#:import click_on_queue_item my_kivy.screen_queue.click_on_queue_item
#:import click_on_error_item my_kivy.screen_queue.click_on_error_item
#:import click_on_done_item my_kivy.screen_queue.click_on_done_item
FloatLayout:

    MDTabs:
        id: queue_tabs
        pos_hint: {"top":1.0}
        Tab:
            id: queue_tab
            text:"format-list-checkbox"
            ScrollList:
                item_type: LeftStatusIndicatorListItem
                callback: click_on_queue_item
                item_dicts: [{"text": word, "loading_state": app.loading_state_dict[word]} for word in app.queue_words]

        Tab:
            id: done_tab
            text: "checkbox-marked-circle"
            ScrollList:
                item_type: LeftStatusIndicatorListItem
                callback: click_on_done_item
                item_dicts: [{"text": word} for word in app.done_words]


        Tab:
            item_type: LeftStatusIndicatorListItem
            id: error_tab
            text: "close-circle"
            ScrollList:
                callback: click_on_error_item
                item_dicts: [{"text": word} for word in app.error_words]


    MyFloatingActionButtonSpeedDial:
        id: speed_dial
        data: options_dict
        callback: import_from