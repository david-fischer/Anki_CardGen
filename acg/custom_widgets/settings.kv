<PathChooser>:
    orientation:"horizontal"
    height: 40
    size_hint: None, None
    padding: 10,10
    MDLabel:
        text: root.key + ":"
        size_hint: None,None
        height: root.height
        width: 200
    MDRectangleFlatIconButton:
        icon: "folder"
        text: root.val
        size_hint: None,None
        on_press: root.choose_path()

<SectionBase>:
    orientation: "vertical"
    size_hint_y: None
    height: self.minimum_height


<ThemeSection>:
    MDRaisedButton:
        size_hint: None,None
        pos_hint: {"center_x": 0.5}
        text: "Change App Theme"
        on_press: root.theme_dialog.open()


<SettingsWidget>:
    orientation: "vertical"
    height: self.minimum_height
    spacing: 10
