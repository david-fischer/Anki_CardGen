<ThemableColorChangeBehavior>:
    canvas:
        Color:
            rgba: root.bg_color

<SeparatorWithHeading>:
    size_hint: 1,None
    height: dp(15)
    pos_hint: {"center_y":0.5}

    MDSeparator:
        id: sep1
        orientation: "horizontal"
        pos_hint: {"center_y": .5, "right":1.0}
        size_hint_x: None
        width: (root.width - label.texture_size[0] - 50)/2

    MDSeparator:
        id: sep2
        orientation: "horizontal"
        pos_hint: {"center_y": .5,"x":0}
        size_hint_x: None
        width: sep1.width

    MDLabel:
        id: label
        text: root.heading
        font_style: "Button"
        pos_hint: {"center_x":0.5, "center_y":0.5}
        halign: "center"
        can_capitalize: True
        size_hint: None, 1
        text_size: None,None

<CheckChip>:
    icon: ""
    size_hint: None,  None
    height: "26dp"
    padding: 0, 0, "5dp", 0
    width: self.minimum_width - dp(10)
    canvas:
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(12)]

    BoxLayout:
        size_hint_x: None
        width: self.minimum_width+ (0 if (root.icon == "") else 30)
        padding: dp(15)
        spacing: dp(5)

        Label:
            id: label
            text: root.text
            color: root.text_color
            size_hint_x: None
            pos_hint: {"left":0}
            width: self.texture_size[0]

        MDIcon:
            id: "icon"
            icon: root.icon
            size: 100,100
            text_size: 100,100
            texture_size: 100,100
            color: root.text_color

<CheckCard>:
    padding: 15,15
    size_hint: 1,None
    border_radio: 20
    height: label.texture_size[1]+2*self.padding[1]
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

    MDLabel:
        id: label
        size_hint: 1,1
        text: root.text
        height: self.texture_size[1]
        theme_text_color: "Custom"
        color: root.text_color


<CheckChipContainer>:
    orientation: "lr-tb"
    padding: 10,10
    spacing: 10,10
    size_hint:1, None
    height: self.minimum_height
    canvas:
        Color:
            rgba: self.theme_cls.divider_color
        Line:
            width: 1 if self.draw_box else .0001
            rectangle: self.x, self.y+self.spacing[1]/2, self.width, self.height


<CheckImageTile>:
    box_color: 0,0,0,0
    canvas:
        Color:
            rgba: self.theme_cls.primary_color
        Line:
            id: border_line
            width: self.border_width
            rectangle: self.x, self.y, self.width, self.height


<MyCarousel>:
    carousel: carousel
    root_for_children: carousel
    size_hint_y: None
    recycle_view_name: "RecycleViewBox"
    recycle_view_data_class: "TransCard"
    Carousel:
        id: carousel
        pos: root.pos
        size:root.size
        anim_move_duration: 0.2
        on_current_slide: root.update_height()
        ignore_perpendicular_swipes: True
        size_hint_x: 1
        scroll_distance: dp(5)
        scroll_timeout: 500

    MDIconButton:
        id: left_icon
        pos_hint: {"center_y":0.5,"x":0}
        icon: "" if not carousel.index else "chevron-left"
        on_press:
            if carousel.index: carousel.index-=1

    MDIconButton:
        id: right_icon
        pos_hint: {"center_y":0.5,"right":1}
        icon: "" if carousel.index is None else "chevron-right" if carousel.index < len(carousel.slides) -1 else ""
        on_press:
            if carousel.index < len(carousel.slides)-1: carousel.index+=1



<TransCard>:
    padding: dp(8),dp(8)
    spacing: dp(8)
    size_hint: None,None
    pos_hint: {"center_x":0.5,"center_y":0.5}
    border_radius: 20
    height: self.minimum_height
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

    MDLabel:
        id: label_orig
        size_hint: 1,None
        size: self.texture_size
        text: root.text_orig
        pos_hint: {"top":1}

    MDSeparator:
        orientation: "vertical" if root.orientation == "horizontal" else "horizontal"

    MDLabel:
        id: label_trans
        size_hint: 1,None
        size: self.texture_size
        text: root.text_trans
        pos_hint:{"top":1}

<CardCarousel>:
    child_class_name: "TransCard"
    modal_data_cls_name: "TransCard"
    modal_layout_name: "ScrollBox"
    pos_hint: {"center_x":0.5}

<ImageCarousel>:
    child_class_name: "LongPressImage"
    modal_data_cls_name: "CheckImageTile"
    modal_layout_name: "ScrollGrid"

<RecycleCarousel>:
    carousel: carousel
    slide_width: self.width-left_icon.width -right_icon.width
    current_slide: carousel.current_slide
    size_hint_y: None
    size_hint_x: 1
    modal_layout_name: "ScrollBox"
    modal_data_cls_name: "TransCard"
    Carousel:
        id: carousel
        loop: True
        pos: root.pos
        size:root.size
#        on_current_slide: root.update_height()
        ignore_perpendicular_swipes: True
        size_hint_x: 1

    MDIconButton:
        id: left_icon
        pos_hint: {"center_y":0.5,"x":0}
        icon: "chevron-left"
        on_press: carousel.load_previous()

    MDIconButton:
        id: right_icon
        pos_hint: {"center_y":0.5,"right":1}
        icon: "chevron-right"
        on_press: carousel.load_next()

<RecycleCardCarousel@RecycleCarousel>:
    dynamic_height: True
    viewclass: "TransCard"
    modal_layout_name: "ScrollBox"
    modal_data_cls_name: self.viewclass
    default_modal_size_hint: 1,None
    pos_hint: {"center_x":0.5}


<RecycleImageCarousel@RecycleCarousel>:
    dynamic_height: False
    viewclass: "LongPressImage"
    modal_layout_name: "ScrollGrid"
    modal_data_cls_name: "CheckImageTile"
    default_modal_size_hint: 1,1
