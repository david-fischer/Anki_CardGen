HistoryRoot:
    id: history_root
    speed_dial: speed_dial
    right_action_items:
        [\
        ["filter", self.filter],\
        ["sort-variant", self.sort],\
        ]

    RecycleList:
        id: history_list
        viewclass: "LeftStatusIndicatorListItem"
        data:
            [\
            {"text": word, "current_state":word_state, "callbacks":{"on_press": root.click_on_item}} for word, word_state in\
            pick_val(["error","done","exported"],app.word_state_dict).items()\
            ]

    MDFloatingActionButtonSpeedDial:
        id: speed_dial
        data: root.action_button_data
        callback: root.export_cards
