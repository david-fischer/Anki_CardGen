#:import pick_val utils.pick_val
#:import QueuedRoot screens.QueuedRoot
#:import RecycleList custom_widgets.scroll_widgets.RecycleList
QueuedRoot:
    id: queued_root
    recycle_list: recycle_list
    speed_dial: speed_dial
    right_action_items:
        [\
        ["download", self.queue_all],\
        ["close", self.dequeue_all],\
        ["filter", self.filter],\
        ["sort-variant", self.sort],\
        ]

    RecycleList:
        id: recycle_list
        viewclass: "LeftStatusIndicatorListItem"
        data:
            [\
            {"text": word, "current_state":word_state, "callbacks":{"on_press": root.click_on_item}} for word, word_state in\
            pick_val(["waiting","queued","ready","loading"],app.word_state_dict).items()\
            ]


    MyFloatingActionButtonSpeedDial:
        id: speed_dial
        data: {import_dict["icon"]: import_dict["text"] for import_dict in root.import_dicts}
        callback: root.choose_file_to_import
