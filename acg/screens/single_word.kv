SingleWordRoot:
    id: single_word_root
    scroll_view: scroll_view
    template: app.template
    right_action_items:
        [\
        ["refresh", self.refresh],\
        ["content-save-move", self.proceed],\
        ["undo-variant", self.back_to_queue],\
#        ["skip-next", self.skip],\
        ]


    ScrollView:
        id: scroll_view
        do_scroll_x: False
        do_scroll_y: True
        size_hint: 1,1

    MDFloatingActionButton:
        icon: "check-bold"
        pos: (root.width-dp(16)-self.width,dp(10))
        on_press: root.template.get_results()
